<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize">15sp</item>
    </style>

    <style name="PopupAnimBottomToTop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_enter_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_exit_bottom</item>
    </style>

</resources>
